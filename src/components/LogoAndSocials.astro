---
import { Image } from 'astro:assets';
import SocialIcons from './SocialIcons.astro';
import Logo from '../assets/images/logo.png';

export interface Props {
  showLogo?: boolean;
  showSocials?: boolean;
  logoSize?: 'sm' | 'md' | 'lg';
  socialsSize?: 'xs' | 'sm' | 'md';
  layout?: 'horizontal' | 'vertical';
  className?: string;
}

const {
  showLogo = true,
  showSocials = true,
  logoSize = 'md',
  socialsSize = 'sm',
  layout = 'horizontal',
  className = ''
} = Astro.props;

// Logo size classes
const logoSizeClasses = {
  sm: 'w-12 h-12',
  md: 'w-16 h-16 sm:w-20 sm:h-20',
  lg: 'w-20 h-20 sm:w-24 sm:h-24'
};

// Layout classes
const layoutClasses = {
  horizontal: 'flex items-center justify-between',
  vertical: 'flex flex-col items-center gap-4'
};
---

<div class={`${layoutClasses[layout]} ${className}`}>
  <!-- Logo -->
  {showLogo && (
    <div class="flex-shrink-0 overflow-hidden rounded-full border-3 border-gray-900 hover:scale-105 transition-transform duration-300 animate-slide-in-from-left animate-duration-700">
      <a href="/">
        <Image 
          alt="David Torres Logo" 
          src={Logo} 
          class={logoSizeClasses[logoSize]}
        />
      </a>
    </div>
  )}
  
  <!-- Social Icons -->
  {showSocials && (
    <div class="flex-shrink-0 animate-slide-in-from-right animate-duration-700 animate-delay-300">
      <SocialIcons size={socialsSize} />
    </div>
  )}
</div>