---
import { Image } from 'astro:assets';
import Logo from '../assets/images/logo.png';
import CV from '../../public/CV-DavidTorres.pdf';

export interface Props {
  links?: Array<{
    href: string;
    text: string;
    active?: boolean;
    isHighlight?: boolean;
  }>;
}

const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';

const { 
  links = [
  /*   { href: "#projects", text: "PROYECTOS" }, */
    { href: "#experience", text: "EXPERIENCIA" },
    { href: "#skills", text: "HABILIDADES" },
    { href: "#about", text: "SOBRE M√ç" },
    { href: "#contact", text:"CONTACTO"}
  ]
} = Astro.props;

---

<!-- Unified Navigation Bar -->
<nav class="navbar-animate w-full max-w-full overflow-hidden bg-transparent backdrop-blur-md pt-5 py-2 sm:py-4 px-4 sm:px-8" id="navbar">
  <div class="flex items-center justify-between w-full max-w-full">
    <!-- Logo -->
    <div class="navbar-animate flex-shrink-0 overflow-hidden rounded-full border-3 border-gray-900 hover:scale-105 transition-transform duration-300">
      <a href="/">
        <Image alt="David Torres Logo" src={Logo} class="w-16 sm:w-20" />
      </a>
    </div>
    
    <!-- Download CV Button on the right -->
    <div class="navbar-animate">
      <a 
        href={CV}
        class='hover:bg-transparent text-gray-950 font-bold rounded-full border-3 border-gray-950 py-4 px-4 text-lg transition-all duration-300 hover:scale-105 flex items-center gap-2'
        title="Descargar CV"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8"><path fill="currentColor" d="M4 4a2 2 0 0 1 2-2h8a1 1 0 0 1 .707.293l5 5A1 1 0 0 1 20 8v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm13.586 4L14 4.414V8zM12 4H6v16h12V10h-5a1 1 0 0 1-1-1zm0 7.5a1 1 0 0 1 1 1v2.586l.293-.293a1 1 0 0 1 1.414 1.414l-2 2a1 1 0 0 1-1.414 0l-2-2a1 1 0 1 1 1.414-1.414l.293.293V12.5a1 1 0 0 1 1-1"/></svg>
        
      </a>
    </div>
  </div>
</nav>

<!-- Left Sidebar Navigation (Desktop Only) -->
<nav class="navbar-animate fixed left-4 top-1/2 transform -translate-y-1/2 z-40 hidden md:block">
  <div class="border-3 rounded-full text-black py-5 px-1">
    <div class="flex flex-col items-center space-y-4">
      {links.map((link) => (
        <a 
          href={link.href} 
          class={`
            relative uppercase text-sm font-bold font-stretch-ultra-expanded tracking-tighter transition-all duration-300 hover:scale-110 block text-center rounded-full p-3 m-0
            ${link.active 
              ? 'text-white bg-gold-500' 
              : 'text-black hover:text-gold-500'
            }
          `}
          style="writing-mode: vertical-rl; text-orientation: mixed;"
        >
          {link.text}
          {isHomePage && (
            <div class={`absolute left-1/2 transform -translate-x-1/2 -bottom-1 w-0.5 h-4 hover:text-[#F6A60D] bg-gray-800 transition-all duration-300  ${link.active ? 'opacity-100' : 'opacity-0 hover:opacity-100'}`}></div>
          )}
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  .navbar-animate {
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeInDown 0.8s ease-out forwards;
  }

  .navbar-animate:nth-child(1) { animation-delay: 0.1s; }
  .navbar-animate:nth-child(2) { animation-delay: 0.2s; }
  .navbar-animate:nth-child(3) { animation-delay: 0.3s; }
  .navbar-animate:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInDown {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .navbar-animate {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

