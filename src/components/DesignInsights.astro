---
// Component para la sección de insights y tendencias de diseño
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-light text-black mb-6">Design Insights & Trends</h2>
    </div>
    
    <!-- Insights Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      
      <!-- Insight 1 -->
      <div class="group cursor-pointer">
        <div class="bg-gradient-to-br from-teal-300 to-teal-500 rounded-2xl h-48 relative overflow-hidden flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-red-500 rounded-full"></div>
        </div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="px-3 py-1 bg-black text-white text-xs rounded-full">Design</span>
            <span class="text-xs text-gray-500">5 min read</span>
          </div>
          <h3 class="text-lg font-medium text-black mb-2">Understanding UI design elements and enhancing creativity</h3>
        </div>
      </div>
      
      <!-- Insight 2 -->
      <div class="group cursor-pointer">
        <div class="bg-gradient-to-br from-red-400 to-red-600 rounded-2xl h-48 relative overflow-hidden flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-yellow-400 rounded-full"></div>
        </div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="px-3 py-1 bg-black text-white text-xs rounded-full">Trends</span>
            <span class="text-xs text-gray-500">7 min read</span>
          </div>
          <h3 class="text-lg font-medium text-black mb-2">Exploring the newest innovations and trends in web design</h3>
        </div>
      </div>
      
      <!-- Insight 3 -->
      <div class="group cursor-pointer">
        <div class="bg-gradient-to-br from-purple-300 to-purple-500 rounded-2xl h-48 relative overflow-hidden flex items-center justify-center mb-6">
          <div class="w-20 h-20 bg-white bg-opacity-50 rounded-lg"></div>
        </div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="px-3 py-1 bg-black text-white text-xs rounded-full">Tips</span>
            <span class="text-xs text-gray-500">4 min read</span>
          </div>
          <h3 class="text-lg font-medium text-black mb-2">Essential tips for creating successful user experiences</h3>
        </div>
      </div>
      
      <!-- Insight 4 -->
      <div class="group cursor-pointer">
        <div class="bg-gradient-to-br from-green-400 to-green-600 rounded-2xl h-48 relative overflow-hidden flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-white bg-opacity-30 rounded-full"></div>
        </div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="px-3 py-1 bg-black text-white text-xs rounded-full">Guide</span>
            <span class="text-xs text-gray-500">6 min read</span>
          </div>
          <h3 class="text-lg font-medium text-black mb-2">Building robust systems with scalable design patterns</h3>
        </div>
      </div>
      
    </div>
    
  </div>
</section>
