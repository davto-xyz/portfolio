---
import SocialIcons from './SocialIcons.astro';
import { contactData } from '../data/contact';
---

<footer class="bg-white text-white py-12 border-3 border-gray-950 rounded-2xl">
  <div class="container mx-auto px-3 h-full">
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-end ">
      <!-- Left Column: CTA, Email Button, and Location -->
      <div class="text-center lg:text-left">
        <!-- Call to Action -->
        <div class="mb-6">
          <p class="text-lg lg:text-xl  font-black text-gray-950 group-hover:text-gold-500 transition-colors duration-300 mb-1 font-stretch-ultra-expanded uppercase">
            Puedes contactar conmigo de muchas formas. Elige la que más te guste.
          </p>
          
        </div>

        <!-- Email with Copy Button -->
         <div class="flex items-center mb-6 lg:items-center">

           <div class=" flex items-center justify-between   border-3 w-fit  border-gray-950 rounded-2xl">
             <p 
             
             class="inline-flex items-center px-6 pr-3 font-base text-lg text-gray-950 font-stretch-125%"
             >
             {contactData.email}  
           </p>
            
            <button 
            id="copyEmailBtn"
            class="py-3 pr-6"
            data-email={contactData.email}  
            title="Copiar email al portapapeles"
            >
            <svg id="copyIcon" class="w-5 h-5 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <svg id="checkIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </button>
        </div>
        <div class="items-center justify-center pl-5">
          <p id='copy-text' class="hidden text-gray-950 font-black">
            ¡Copiado!
          </p>
        </div>
      </div>

        
      </div>

      <!-- Right Column: Social Icons and Copyright -->
      <div class="text-center lg:text-right space-y-6 items-end justify-end">
        
        <!-- Social Media -->
        <div class="mb-4">
          <SocialIcons 
            size="lg" 
            class="!text-gray-400 hover:!text-gold-500 justify-center lg:justify-end" 
          />
        </div>

        
      </div>
    </div>
    <div>
      <!-- Location -->
        <p class=" text-sm font-medium font-base  text-gray-950 font-stretch-125% text-center lg:text-right">
          Hecho con ❤️ en Murcia
        </p>
    </div>
    
  </div>
</footer>

<script>
  function initCopyEmail() {
    const copyBtn = document.getElementById('copyEmailBtn');
    const copyIcon = document.getElementById('copyIcon');
    const checkIcon = document.getElementById('checkIcon');
    const copyText = document.getElementById('copy-text');
    
    if (copyBtn && copyIcon && checkIcon) {
      copyBtn.addEventListener('click', async () => {
        const email = copyBtn.getAttribute('data-email');
        
        try {
          await navigator.clipboard.writeText(email);
          
          // Change to check icon and green color
          copyIcon.classList.add('hidden');
          checkIcon.classList.remove('hidden');
          copyBtn.classList.add('text-gray-950','rounded-e-full');
          copyBtn.classList.remove('bg-gray-800', 'text-gray-300');
          copyText.classList.remove('hidden');
          
          setTimeout(() => {
            // Revert back to copy icon
            copyIcon.classList.remove('hidden');
            checkIcon.classList.add('hidden');
            copyBtn.classList.remove('bg-gold-500', 'text-white', );
            copyText.classList.add('hidden');
            
          }, 3000);
        } catch (err) {
          console.error('Error copying to clipboard:', err);
        }
      });
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCopyEmail);
  } else {
    initCopyEmail();
  }

  // For Astro SPA navigation
  document.addEventListener('astro:page-load', initCopyEmail);
</script>
