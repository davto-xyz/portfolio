---
import { getCollection } from 'astro:content';
import Title from './Title.astro';

// Obtener todas las experiencias desde MDX
const allExperiences = await getCollection('experience');

// Ordenar por orden especificado en frontmatter o por orden numérico
const experiences = allExperiences.sort((a, b) => {
  if (a.data.order && b.data.order) {
    return a.data.order - b.data.order;
  }
  return a.data.company.localeCompare(b.data.company);
});

---

<section id="experience" class="py-20 min-h-screen flex items-center">
  <div class="w-full">
    
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="w-full flex justify-center">
        <Title title="Experiencia" />
      </div>
      <p class="text-xl text-gray-600 mt-6 w-full leading-relaxed">
        +5 años construyendo experiencias digitales extraordinarias para empresas líderes y proyectos innovadores
      </p>
    </div>

    <!-- Experience Grid - 2 columns -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16 justify-center items-stretch w-full  lg:grid-rows-1">
      {experiences.slice(0, 2).map((exp, index) => {
        return (
          <div class="experience-card bg-[#E3E2DC]/70 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 group relative overflow-hidden w-full hover:bg-[#ebeae4]">
            <!-- Background Gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-gold-500/5 group-hover:to-gold-500/10 transition-all duration-300 border-3 rounded-3xl border-gray-950"></div>
            
            <!-- Content -->
            <div class="p-6 relative z-10 flex flex-col space-y-4 h-full lg:min-h-[500px]">
              <!-- Header Section -->
              <div class="flex-shrink-0">
                <!-- Company & Roles -->
                <div class="mb-2">
                  <h3 class="font-stretch-ultra-expanded font-black text-3xl text-gray-950 group-hover:text-gold-500 transition-colors duration-300 text-center mb-4">
                    {exp.data.company}
                  </h3>
                  
                  <!-- Role Badges -->
                  <div class="flex flex-wrap gap-2 mt-4 justify-center">
                    {exp.data.roles.map((role) => (
                      <span class="px-3 py-1 bg-gold-500 text-gray-950 text-lg font-bold uppercase rounded-full shadow-sm hover:bg-gold-600 transition-colors duration-200 border-2 border-gray-850 tracking-tighter">
                        {role}
                      </span>
                    ))}
                  </div>
                  
                  <p class="text-sm text-gray-850 mt-6 flex items-center gap-2 ">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {exp.data.period}
                  </p>
                </div>
              </div>
              
              <!-- Tasks - Flexible content -->
              <div class="flex-grow">
                <ul class="text-gray-900 text-sm space-y-2">
                  {exp.data.tasks.map((task) => (
                    <li class="flex items-start gap-2">
                      <span class="text-gold-500 font-bold text-xs mt-1">•</span>
                      <p class="flex-1 text-base">{task}</p>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Technologies - Show all -->
              <div class="flex-shrink-0 pt-4">
                <div class="flex flex-wrap gap-2">
                  {exp.data.technologies.map((tech) => (
                    <span class="px-3 py-1  text-gray-950 text-xs 2xl:text-sm rounded-full  font-medium bg-white hover:text-grey-950 transition-colors duration-200">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>