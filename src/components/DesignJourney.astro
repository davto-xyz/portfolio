---
// Component para la secci√≥n de experiencia/journey
---

<section class="py-24 bg-gray-50">
  <div class="container mx-auto px-8">
    
    <!-- Section Header -->
    <div class="mb-16">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-2 h-2 bg-black rounded-full"></div>
        <span class="text-sm font-medium text-gray-600">Experience</span>
      </div>
      <h2 class="text-4xl lg:text-5xl font-light text-black mb-6">Explore My Design Journey</h2>
    </div>
    
    <!-- Experience Timeline -->
    <div class="space-y-8">
      
      <!-- Creative Minds, New York, USA -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center py-6 border-b border-gray-200">
        <div class="mb-4 lg:mb-0">
          <h3 class="text-xl font-medium text-black mb-1">Creative Minds, New York, USA</h3>
          <p class="text-gray-600">Senior UI/UX Designer | Product Designer</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">2023 - Present</span>
          <button class="px-4 py-2 bg-black text-white text-sm rounded-full hover:bg-gray-800 transition-colors">
            Working
          </button>
        </div>
      </div>
      
      <!-- Innovative Designs Inc, USA -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center py-6 border-b border-gray-200">
        <div class="mb-4 lg:mb-0">
          <h3 class="text-xl font-medium text-black mb-1">Innovative Designs Inc, USA</h3>
          <p class="text-gray-600">Mid-Level Web Designer | Creative Designer</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">2021 - 2023</span>
          <button class="px-4 py-2 border border-gray-300 text-gray-700 text-sm rounded-full hover:bg-gray-50 transition-colors">
            2 Years
          </button>
        </div>
      </div>
      
      <!-- Visionary Creations Ltd, UK -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center py-6 border-b border-gray-200">
        <div class="mb-4 lg:mb-0">
          <h3 class="text-xl font-medium text-black mb-1">Visionary Creations Ltd, UK</h3>
          <p class="text-gray-600">Product Designer| Junior UI/UX Designer</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">2019 - 2021</span>
          <button class="px-4 py-2 border border-gray-300 text-gray-700 text-sm rounded-full hover:bg-gray-50 transition-colors">
            3 Years
          </button>
        </div>
      </div>
      
      <!-- FutureTech, Berlin, Germany -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center py-6 border-b border-gray-200">
        <div class="mb-4 lg:mb-0">
          <h3 class="text-xl font-medium text-black mb-1">FutureTech, Berlin, Germany</h3>
          <p class="text-gray-600">Junior Web Designer | Design Intern</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">2018 - 2019</span>
          <div class="flex gap-2">
            <button class="px-3 py-1 bg-black text-white text-xs rounded-full">HTML</button>
            <button class="px-3 py-1 bg-black text-white text-xs rounded-full">CSS</button>
          </div>
        </div>
      </div>
      
      <!-- Expert Designs Inc, USA -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center py-6">
        <div class="mb-4 lg:mb-0">
          <h3 class="text-xl font-medium text-black mb-1">Expert Designs Inc, USA</h3>
          <p class="text-gray-600">Graphic Designer| Junior Visual Designer</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">2017 - 2018</span>
          <button class="px-4 py-2 border border-gray-300 text-gray-700 text-sm rounded-full hover:bg-gray-50 transition-colors">
            1 Years
          </button>
        </div>
      </div>
      
    </div>
    
    <!-- Portfolio Images -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-16">
      <div class="bg-gradient-to-br from-orange-200 to-orange-300 rounded-2xl h-48"></div>
      <div class="bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl h-48"></div>
      <div class="bg-gradient-to-br from-gray-300 to-gray-500 rounded-2xl h-48"></div>
    </div>
    
  </div>
</section>
